<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    android:elevation="5dp"
    android:background="#fff"
    xmlns:fancy="http://schemas.android.com/apk/res-auto">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:padding="5dip"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="12dp"
                android:text="Refrence #" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:padding="5dip"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="12dp"
                android:text="Transaction ID"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:padding="5dip"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="12dp"
                android:text="Amount"
                />
        </LinearLayout>

<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtRef"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:padding="5dip"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="12dp"
                android:text="Ref" />

            <TextView
                android:id="@+id/txtPid"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:padding="5dip"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="12dp"
                android:text="Transaction Id" />

            <TextView
                android:id="@+id/txtAmount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:padding="5dip"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="12dp"
                android:text="Status" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:padding="5dip"
                android:textSize="12dp"
                android:textColor="#000"
                android:text="Date Time" />

            <TextView
                android:id="@+id/txtStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:padding="5dip"
                android:textSize="12dp"
                android:textColor="#000"
                android:text="Gateway" />

        <!--    <Button
                android:id="@+id/btnVerify"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:textColor="@color/fab_material_white"
                android:backgroundTint="@color/colorPrimary"
                android:text="VERIFY" />-->

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/btnVerify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_weight="3"
                android:textStyle="bold"
                fancy:fb_borderColor="#FFFFFF"
                fancy:fb_borderWidth="0dp"
                fancy:fb_defaultColor="@android:color/holo_red_dark"
                fancy:fb_focusColor="#000"
                fancy:fb_radius="30dp"
                fancy:fb_text="Verify"
                fancy:fb_textColor="#FFFFFF"
              />

        </LinearLayout>
       <!-- <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/fab_material_grey_500"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            />-->

    </LinearLayout>


</android.support.v7.widget.CardView>